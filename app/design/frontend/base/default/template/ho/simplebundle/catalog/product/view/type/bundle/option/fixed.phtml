/** @var $this Ho_SimpleBundle_Block_Catalog_Product_View_Type_Bundle_Option_Fixed */
/** @var $_option Mage_Bundle_Model_Option */
$_option = $this->getOption();

$_selections = $this->getSelections();
?>
<dd<?php if ($_option->getDecoratedIsLast()){?> class="last"<?php }?>>
    <div class="input-box">
        <?php if (count($_selections) == 1 && $_option->getRequired()): ?>
        <input type="hidden" name="bundle_option[<?php echo $_option->getId() ?>]" value="<?php echo $_selections[0]->getSelectionId() ?>"/>
        <?php else:?>
        <ul class="options-list">
            <?php foreach($_selections as $_product): ?>
            <?php /** @var $_product Mage_Catalog_Model_Product */ ?>
            <li>
				<div class="content">
                    <a href="<?php echo $_product->getProductUrl() ?>" class="product-image">
                        <img src="<?php echo $this->helper('catalog/image')->init($_product, 'small_image')->resize(100); ?>"
                             width="100" height="100"
                             alt="<?php echo $this->stripTags($this->getImageLabel($_product, 'small_image'), null, true) ?>" />
                    </a>
                    <h3>
                        <span class="qty"><?php echo $_product->getSelectionQty()*1; ?> x</span>
                        <a class="product-name" href="<?php echo $_product->getProductUrl() ?>"><?php echo $_product->getName(); ?></a>
                    </h3>
                    <?php echo $this->getPriceHtml($_product, true) ?>

                    <?php $_product->getSelectionQty(); ?>
                    <?php if($_option->getRequired()): ?>
                        <?php echo $this->setValidationContainer('bundle-option-'.$_option->getId().'-'.$_product->getSelectionId(), 'bundle-option-'.$_option->getId().'-container') ?>
                    <?php endif; ?>
                </div>
            </li>
            <?php endforeach; ?>
        </ul>
        <table class="totals">
            <colgroup>
                <col/>
                <col width="1"/>
            </colgroup>
            <tbody>
                <tr>
                    <td class="totals-label a-right"><?php echo $this->__('Normal Price') ?></td>
                    <td class="totals-price a-right"><?php echo $this->getOriginalPriceHtml(); ?></td>
                </tr>
                <tr>
                    <td class="totals-label a-right"><?php echo $this->__('Your Discount') ?></td>
                    <td class="totals-price a-right"><?php echo $this->getDiscountPriceHtml(); ?></td>
                </tr>
            </tbody>
            <tfoot>
                <tr>
                    <td class="totals-label a-right"><?php echo $this->__('Now as Bundle') ?></td>
                    <td class="totals-price a-right"><?php echo $this->getPriceHtml($this->getProduct()); ?></td>
                </tr>
            </tfoot>
        </table>
        <div id="bundle-option-<?php echo $_option->getId() ?>-container"></div>
        <?php endif; ?>
    </div>
</dd>
