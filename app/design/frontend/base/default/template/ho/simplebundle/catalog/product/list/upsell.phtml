/* @var $this  Ho_SimpleBundle_Block_Catalog_Product_List_Upsell */

$_productCollection = $this->getItemCollection();
$_parentProduct = $this->getProduct();
$_helper = $this->helper('catalog/output');
?>
<?php if ($_productCollection->count()): ?>
<div class="panel panel-default panel-up-sell">
    <div class="panel-heading">
        <h2 class="panel-title"><?php echo $this->__('Bundle Discount for %s', $_parentProduct->getName()) ?></h2>
    </div>

    <div class="panel-body products-list">
        <?php foreach ($_productCollection as $_product): ?>
        <div class="item">
            <?php echo Mage::helper('ho_bootstrap/list')->getProductHtml('simplebundle', $_product, array(), $this->getLimitCharacters()); ?>
        </div>
        <?php endforeach; ?>
    </div>
</div>
<?php endif; ?>