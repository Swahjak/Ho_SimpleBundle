<?php
/** @var Mage_Catalog_Model_Product $_product */
$_product = $this->getProduct();

/** @var Ho_SimpleBundle_Helper_Data $_helper */
$_helper = Mage::helper('ho_simplebundle');
?>
<?php if ($_helper->isBundleProductSimple($_product)): ?>
    <table class="totals">
        <colgroup>
            <col/>
            <col width="1"/>
        </colgroup>
        <tbody>
            <tr>
                <td class="totals-label a-right"><?php echo $this->__('Normal Price') ?></td>
                <td class="totals-price a-right"><?php echo $_helper->getOriginalPriceHtml($_product); ?></td>
            </tr>
            <tr>
                <td class="totals-label a-right"><?php echo $this->__('Your Discount') ?></td>
                <td class="totals-price a-right"><?php echo $_helper->getDiscountPriceHtml($_product); ?></td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <td class="totals-label a-right"><?php echo $this->__('Now as Bundle') ?></td>
                <td class="totals-price a-right"><?php echo $_helper->getFinalPriceHtml($_product) ?></td>
            </tr>
        </tfoot>
    </table>
<?php else: ?>
<?php echo $this->getPriceHtml($_product, false, '_clone') ?>
<?php endif; ?>
