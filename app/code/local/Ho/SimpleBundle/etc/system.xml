<config>
    <tabs>
        <ho_config translate="label" module="ho_simplebundle">
            <label>H&amp;O</label>
            <sort_order>300</sort_order>
        </ho_config>
    </tabs>
    <sections>
        <ho_simplebundle translate="label" module="ho_simplebundle">
            <label>H&amp;O Simple Bundle Configuration</label>
            <tab>ho_config</tab>
            <sort_order>130</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General Options</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <percentage_including_original translate="label comment" module="ho_simplebundle">
                            <label>Show discount percentage including original product</label>
                            <frontend_type>select</frontend_type>
                            <validate>required-entry</validate>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                        </percentage_including_original>
                    </fields>
                </general>
            </groups>
        </ho_simplebundle>
    </sections>
</config>